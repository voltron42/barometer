<!DOCTYPE program [
    <!ELEMENT program ((procedure|function)*,main)>
    <!ATTLIST program name CDATA #REQUIRED>
    <!ELEMENT print EMPTY>
    <!ATTLIST print value CDATA #REQUIRED>
    <!ELEMENT main (set|print|for|for-each|while|do-while|if|try|call)+>
    <!ELEMENT for (set|print|for|for-each|while|do-while|if|try|call)+>
    <!ATTLIST for
        var CDATA #REQUIRED
        init CDATA #REQUIRED
        while CDATA #REQUIRED
        step CDATA #REQUIRED>
    <!ELEMENT for-each (set|print|for|for-each|while|do-while|if|try|call)+>
    <!ATTLIST for-each
        item CDATA #REQUIRED
        collection CDATA #REQUIRED>
    <!ELEMENT while (set|print|for|for-each|while|do-while|if|try|call)+>
    <!ATTLIST while while CDATA #REQUIRED>
    <!ELEMENT do-while (set|print|for|for-each|while|do-while|if|try|call)+>
    <!ATTLIST do-while while CDATA #REQUIRED>
    <!ELEMENT try (do,(catch|finally|(catch,finally)))>
    <!ELEMENT do (set|print|for|for-each|while|do-while|if|try|call)+>
    <!ELEMENT catch (set|print|for|for-each|while|do-while|if|try|call)+>
    <!ATTLIST catch error CDATA #REQUIRED>
    <!ELEMENT finally (set|print|for|for-each|while|do-while|if|try|call)+>
    <!ELEMENT if (then,else-if*,else?)>
    <!ATTLIST if condition CDATA #REQUIRED>
    <!ELEMENT then (set|print|for|for-each|while|do-while|if|try|call)+>
    <!ELEMENT else-if (set|print|for|for-each|while|do-while|if|try|call)+>
    <!ATTLIST else-if condition CDATA #REQUIRED>
    <!ELEMENT else (set|print|for|for-each|while|do-while|if|try|call)+>
    <!ELEMENT set (list|map|null|primitive|call-fn)>
    <!ATTLIST set variable CDATA #REQUIRED>
    <!ELEMENT list (list|map|null|primitive|call-fn)*>
    <!ELEMENT map (entry*)>
    <!ELEMENT entry (list|map|null|primitive|call-fn)*>
    <!ATTLIST entry key CDATA #REQUIRED>
    <!ELEMENT null EMPTY>
    <!ELEMENT primitive EMPTY>
    <!ATTLIST primitive type (string|number|boolean|date|file|path) #REQUIRED>
    <!ELEMENT call (arg*)>
    <!ATTLIST call name CDATA #REQUIRED>
    <!ELEMENT call-fn (arg*)>
    <!ATTLIST call-fn name CDATA #REQUIRED>
    <!ELEMENT procedure (param*,do)>
    <!ATTLIST procedure name CDATA #REQUIRED>
    <!ELEMENT function (param*,do,return)>
    <!ATTLIST function name CDATA #REQUIRED>
    <!ELEMENT return (list|map|null|primitive|call-fn)>
    <!ELEMENT arg (list|map|null|primitive|call-fn)>
    <!ATTLIST arg name CDATA #REQUIRED>
    <!ELEMENT param EMPTY>
    <!ATTLIST param name CDATA #REQUIRED>
]>
<program name="hello_world">
    <main>
        <print value="Hello World!"/>
    </main>
</program>